<ImageOnlyButton@Button>:
	label: ''
	source: None
	size_hint: None,None
	on_press: print("Size {}:{}".format(self.size, self.source))
	Image:
		pos: root.pos
		size: root.size
		source: app.theme_image_file(root.source, root.width)
			
<LaneWidget@BoxLayout>:
	size_hint_y: None
	BoxLayout:
		canvas.before:
			Color:
				rgba: 0.5, 0.5, 0.5, 0.5
			Rectangle:
				pos: self.pos
				size: self.size
		width: 150
		size_hint: None, None
		orientation: 'vertical'
		TextInput:
			height: 30
			width: 50
			size_hint_y: None
			id: lane_name
			text: 'Lane'
		BoxLayout:
			orientation: 'vertical'
			height: 48
			size_hint_y: None
			RelativeLayout:
				ImageOnlyButton:
					source: 'stop'
					size: 24,24
					pos: 27,12
					id: stop_all
				ImageOnlyButton:
					source: 'play'
					size: 48,48
					pos: 51,0
					id: play
				ImageOnlyButton:
					source: 'share'
					size: 24,24
					pos: 99,12
					id: next_event
		BoxLayout:
			height: 24
			Label:
				x: 0
				width: 12
				size_hint_x: None
				text: 'L'
			BoxLayout:
				id: lr_bars
			Label:
				x: 138
				width: 12
				size_hint_x: None
				text: 'R'
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Color:
				rgba: 0.25, 0.25, 0.25, 0.5
			Rectangle:
				pos: self.pos
				size: self.size
		
