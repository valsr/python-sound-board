<ImageButton@Button>: # Image button definition
	label: ''
	source: None
	BoxLayout:
		y: self.parent.y + (self.parent.height - self.height)/2
		x: self.parent.center_x - self.width/2
		Image:
			size: 24, 24
			source: app.theme_image_file(root.source, 24)
		Label:
			text: root.label
	
<ImageOnlyButton@Button>:
	source: None
	BoxLayout:
		size: self.parent.size
		y: self.parent.y
		x: self.parent.x
		Image:
			size: self.parent.size
			source: app.theme_image_file(root.source, self.parent.height)	
