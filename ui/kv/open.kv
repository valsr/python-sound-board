BoxLayout:
	id: 'addsound'
	orientation: 'vertical'
	TextInput:
		height: 30
		size_hint_y: None
		text: 'Path'
		id: PathInput
	BoxLayout:
		FileChooserIconView:
			id: Files
			size_hint_y: 1
			on_selection: root.parent.ui_file_selection()
			dirselect: False
			show_hidden: True

	# bottom of window
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: 30
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				orientatin: 'horizontal'
				TextInput:
					height: 30
					size_hint_y: None
					text: 'Project Name.psb'
					id: FileName
					multiline: False

		BoxLayout:
			orientation: 'vertical'
			width: 150
			size_hint_x: None
			ImageButton:
				size: 150, 25
				size_hint: None,None
				label: 'Open'
				source: 'folder-open'
				on_press: root.parent.ui_open()
			ImageButton:
				size: 150, 25
				size_hint: None,None
				label: 'Cancel'
				on_press: root.parent.ui_cancel()
				source: 'ban'
